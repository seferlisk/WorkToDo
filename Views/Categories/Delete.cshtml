@model WorkToDo.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid p-5 bg-light text-center">
    <!-- Header Section -->
    <header>
        <h1 class="display-3 font-weight-bold text-primary">Categories</h1>
        <p class="lead font-weight-light">Delete.</p>
        <div class="mt-4">
            @* <a asp-action="Create" class="btn btn-primary btn-lg shadow">Add New Task</a> *@
        </div>
    </header>
</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
