@model IEnumerable<WorkToDo.Models.Assignment>
@using WorkToDo.Models

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary display-6 fw-bold">Assignments</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New Assignment
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <strong>No Assignments Found!</strong> Click <a asp-action="Create" class="alert-link">"Add New Assignment"</a> to create your first task.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Priority</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model)
                {
                    <tr class="@(assignment.Priority == PriorityLevel.Urgent ? "table-danger fw-bold" : "")">
                        <td>@assignment.Title</td>
                        <td>@assignment.DueDate.ToString("MMMM dd, yyyy")</td>
                        <td>@assignment.Priority</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@assignment.TaskId" class="btn btn-primary btn-sm me-1 shadow-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@assignment.TaskId" class="btn btn-warning btn-sm me-1 shadow-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@assignment.TaskId" class="btn btn-danger btn-sm shadow-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .table-danger {
        background-color: #f8d7da !important; /* Highlight urgent tasks */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-shadow {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .alert {
        font-size: 1.1rem;
    }
</style>


