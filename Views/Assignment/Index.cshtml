@model IEnumerable<WorkToDo.Models.Assignment>
@using WorkToDo.Models


<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Assignments</h1>
        <a asp-action="Create" class="btn btn-primary shadow">Add New Assignment</a>
    </div>

    @if (!Model.Any())
    {
        <p>You have no assignments yet. Click "Add New Assignment" to create one.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model)
                {
                    <tr class="@(assignment.Priority == PriorityLevel.Urgent ? "table-danger" : "")">
                        <td>@assignment.Title</td>
                        <td>@assignment.DueDate.ToString("MMMM dd, yyyy")</td>
                        <td>@assignment.Priority</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@assignment.TaskId" class="btn btn-primary btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@assignment.TaskId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@assignment.TaskId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .table-danger {
        background-color: #f8d7da !important;
    }
</style>

