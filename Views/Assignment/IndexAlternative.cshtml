@model IEnumerable<WorkToDo.Models.Assignment>
@{
    ViewData["Title"] = "My Assignments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">My Assignments</h1>
        <a asp-action="Create" class="btn btn-primary shadow">Add New Assignment</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no tasks yet. Click "Add New Task" to create your first task.</p>
    }
    else
    {
        <div class="row">
            @foreach (var task in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@task.Title</h5>
                            <p class="card-text text-muted">
                                @if (task.Description.Length > 100)
                                {
                                <p class="card-text text-muted">
                                        @((task.Description.Length > 100 ? task.Description.Substring(0, 100) + "..." : task.Description))
                                </p>


                                }
                                else
                                {
                                    @task.Description
                                }
                            </p>
                            <p class="text-secondary small">
                                <strong>Due:</strong> @task.DueDate.ToString("MMMM dd, yyyy")<br />
                                <strong>Priority:</strong> @task.Priority
                            </p>
                            <p class="badge @((task.IsCompleted ? "bg-success" : "bg-warning text-dark"))">
                                @(task.IsCompleted ? "Completed" : "Pending")
                            </p>
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="Details" asp-route-id="@task.TaskId" class="btn btn-outline-primary btn-sm">View</a>
                                <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-outline-secondary btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-outline-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card-title {
        font-weight: bold;
        color: #333;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.6em;
        border-radius: 0.2rem;
    }

    .btn {
        font-size: 0.85rem;
    }
</style>
