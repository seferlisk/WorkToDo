@model WorkToDo.Models.Assignment

@{
    ViewData["Title"] = "Assignment Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Description</h5>
            <p class="card-text">@Model.Description</p>

            <h5 class="card-title">Details</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Due Date:</strong> @Model.DueDate.ToString("MMMM dd, yyyy")
                </li>
                <li class="list-group-item">
                    <strong>Priority:</strong> @Model.Priority
                </li>
                <li class="list-group-item">
                    <strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "Incomplete")
                </li>
                <li class="list-group-item">
                    <strong>Assigned To:</strong> @Model.AssignedTo
                </li>
               @*  <li class="list-group-item">
                    <strong>Category:</strong> @Model.Category?.Name
                </li> *@
            </ul>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.TaskId" class="btn btn-outline-secondary">Edit</a>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .card-title {
        font-weight: bold;
        color: #333;
    }

    .btn {
        font-size: 0.85rem;
    }
</style>
