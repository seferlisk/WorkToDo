@model IEnumerable<WorkToDo.Models.Category>

<div class="container-fluid p-5 bg-light text-center">
    <!-- Header Section -->
    <header>
        <h1 class="display-3 font-weight-bold text-primary">All Categories</h1>
    </header>
</div>

<div class="container mt-5">
    <h1 class="text-primary text-center">Categories</h1>
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Add New Category</a>
    </div>

    @if (!Model.Any())
    {
        <p>No categories available. Click "Add New Category" to create one.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Styling -->
<style>
    .container-fluid {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }

    .display-3 {
        font-size: 3.5rem;
    }

    .lead {
        font-size: 1.4rem;
        font-weight: 300;
    }

    .btn-primary, .btn-outline-secondary {
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
    }

    .form-floating label {
        font-weight: 500;
    }

    #categoryDescription {
        font-size: 1rem;
        font-style: italic;
    }
</style>