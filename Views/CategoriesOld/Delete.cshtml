@model WorkToDo.Models.Category

<div class="container-fluid p-5 bg-light text-center">
    <!-- Header Section -->
    <header>
        <h1 class="display-3 font-weight-bold text-primary">Delete a Category</h1>
    </header>
</div>

<div class="container mt-5">
    <h1 class="text-danger text-center">Delete Category</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <p class="text-center text-dark">Are you sure you want to delete this category?</p>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                    <li class="list-group-item"><strong>Description:</strong> @Model.Description</li>
                </ul>

                <!-- Delete Confirmation Form -->
                <form asp-action="Delete" method="post">
                    <!-- Hidden Field for Category ID -->
                    <input type="hidden" asp-for="CategoryId" />

                    <div class="text-center">
                        <button type="submit" class="btn btn-danger btn-lg shadow">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<!-- Styling -->
<style>
    .container-fluid {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }

    .display-3 {
        font-size: 3.5rem;
    }

    .lead {
        font-size: 1.4rem;
        font-weight: 300;
    }

    .btn-primary, .btn-outline-secondary {
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
    }

    .form-floating label {
        font-weight: 500;
    }

    #categoryDescription {
        font-size: 1rem;
        font-style: italic;
    }
</style>