@{
    ViewData["Title"] = "Features";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Header Section -->
    <header class="text-center mb-5">
        <h1 class="display-4 font-weight-bold">Key Benefits of To-Do Planner</h1>
        <p class="lead text-muted">Discover how our application helps you stay organized, productive, and collaborative.</p>
    </header>

    <!-- Features Section -->
    <section class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-tasks fa-3x text-primary mb-3"></i>
                    <h5 class="card-title font-weight-bold">Efficient Task Management</h5>
                    <p class="card-text text-muted">Organize tasks with an intuitive interface, prioritize deadlines, and stay on top of your work effortlessly.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title font-weight-bold">Seamless Team Collaboration</h5>
                    <p class="card-text text-muted">Coordinate with team members, share updates, delegate tasks, and work together in real-time.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                    <h5 class="card-title font-weight-bold">Insightful Analytics</h5>
                    <p class="card-text text-muted">Visualize your productivity and gain insights to help you improve task efficiency and time management.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-bell fa-3x text-warning mb-3"></i>
                    <h5 class="card-title font-weight-bold">Smart Reminders</h5>
                    <p class="card-text text-muted">Never miss a deadline with custom reminders and notifications for critical tasks.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-mobile-alt fa-3x text-danger mb-3"></i>
                    <h5 class="card-title font-weight-bold">Mobile Accessibility</h5>
                    <p class="card-text text-muted">Access your tasks on the go with a mobile-friendly design that fits any screen size.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <i class="fas fa-lock fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title font-weight-bold">Secure Data Storage</h5>
                    <p class="card-text text-muted">Keep your information safe with secure, encrypted storage for all your data.</p>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Styles for Feature View -->
<style>
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: scale(1.05);
        }

    i.fa-3x {
        margin-bottom: 1rem;
    }

    .text-muted {
        color: #6c757d;
    }
</style>
