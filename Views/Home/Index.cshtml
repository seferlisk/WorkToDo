@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Header Section -->
    <header class="text-center mb-5">
        <h1 class="display-4 font-weight-bold">To-Do Planner</h1>
        <p class="lead text-muted">Efficient task management for enhanced productivity</p>
        <div class="d-flex justify-content-center mt-3">
            <a href="Account/Login" class="btn btn-primary btn-lg mr-2">Log In</a>
            <a href="Account/Register" class="btn btn-outline-primary btn-lg">Sign Up</a>
        </div>
    </header>

    <!-- Hero Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6 text-center">
            <img src="~/images/clean-hero-image.png" class="img-fluid" alt="Task planner illustration">
        </div>
        <div class="col-md-6">
            <h2 class="font-weight-bold">Streamline Your Workflow</h2>
            <p class="text-muted">Stay organized with a clear overview of daily tasks and team collaboration tools.</p>
            <a href="Features" class="btn btn-secondary mt-3">Discover Features</a>
        </div>
    </div>

    <!-- Key Features Section -->
    <section class="text-center mb-5">
        <h3 class="mb-4 font-weight-bold">Key Features</h3>
        <div class="row">
            <div class="col-md-4">
                <h5>Task Management</h5>
                <p class="text-muted">Plan, organize, and manage your daily tasks effortlessly.</p>
            </div>
            <div class="col-md-4">
                <h5>Collaboration</h5>
                <p class="text-muted">Work together with your team efficiently in real-time.</p>
            </div>
            <div class="col-md-4">
                <h5>Insights</h5>
                <p class="text-muted">Visualize progress and productivity with intuitive reports.</p>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <div class="text-center mb-5">
        <h4 class="font-weight-bold">Start optimizing your workflow today</h4>
        <a href="Account/Register" class="btn btn-primary btn-lg mt-3">Get Started</a>
    </div>
</div>

<!-- Minimal CSS Styles -->
<style>
    .container {
        max-width: 900px;
    }

    .display-4 {
        font-size: 2.8rem;
    }

    .lead {
        font-size: 1.2rem;
        color: #6c757d;
    }

    h5 {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .text-muted {
        color: #6c757d;
    }
</style>
