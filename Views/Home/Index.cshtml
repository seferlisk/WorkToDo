@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-5 bg-light text-center">
    <!-- Header Section -->
    <header>
        <h1 class="display-3 font-weight-bold text-primary">To-Do Planner</h1>
        <p class="lead font-weight-light">Your Ultimate Tool for Organized and Productive Workflows</p>
        <div class="mt-4">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg mr-3 shadow">Log In</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-lg shadow">Register</a>
            @* <a href="Account/Register" class="btn btn-outline-primary btn-lg shadow">Sign Up</a> *@
        </div>
    </header>
</div>

<h1>Welcome, @ViewBag.UserName!</h1>

<!-- Hero Section -->
<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center">
            <img src="~/images/flashy-hero.png" class="img-fluid rounded shadow-lg" alt="Task planning illustration">
        </div>
        <div class="col-md-6">
            <h2 class="font-weight-bold text-dark">Take Control of Your Day</h2>
            <p class="text-muted">Maximize your productivity with a structured daily planner that makes task management effortless and enjoyable.</p>
            <a asp-controller="Home" asp-action="Features" class="btn btn-secondary btn-lg mt-3 shadow" asp>Explore Features</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="container my-5">
    <h2 class="text-center font-weight-bold text-dark mb-4">Why Choose To-Do Planner?</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-4 bg-primary text-white rounded shadow-lg">
                <i class="fas fa-tasks fa-3x mb-3"></i>
                <h5 class="font-weight-bold">Advanced Task Management</h5>
                <p>Keep track of tasks with a simple, effective interface to prioritize, delegate, and complete tasks on time.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 bg-success text-white rounded shadow-lg">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h5 class="font-weight-bold">Team Collaboration</h5>
                <p>Coordinate seamlessly with team members, share updates, and stay aligned on your goals.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 bg-info text-white rounded shadow-lg">
                <i class="fas fa-chart-line fa-3x mb-3"></i>
                <h5 class="font-weight-bold">Insightful Analytics</h5>
                <p>Get visual insights into your productivity trends to improve task management and time efficiency.</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<div class="container text-center my-5">
    <h3 class="font-weight-bold text-dark">Ready to Transform Your Workflow?</h3>
    @* <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg mt-4 shadow">Create a note</a> *@
    <a asp-controller="Task" asp-action="Create" class="btn btn-primary btn-lg mt-4 shadow">Create a Note</a>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary btn-lg mt-4 shadow">Create a Category</a>
</div>

<div class="mb-4">
    <button class="btn btn-primary" onclick="toggleQuickAdd()">Quick Add</button>
    <div id="quickAddForm" style="display: none;" class="mt-3">
        <form asp-action="Create" method="post">
            <input type="text" name="title" class="form-control mb-2" placeholder="Note Title" required />
            <textarea name="content" class="form-control mb-2" placeholder="Note Content"></textarea>
            <button type="submit" class="btn btn-success">Add Note</button>
        </form>
    </div>
</div>

<script>
    function toggleQuickAdd() {
        const form = document.getElementById('quickAddForm');
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }
</script>

<!-- Flashy CSS Styles -->
<style>
    .container-fluid {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }

    .display-3 {
        font-size: 3.5rem;
    }

    .lead {
        font-size: 1.4rem;
        font-weight: 300;
    }

    .btn-primary, .btn-secondary {
        padding: 0.75rem 1.5rem;
        font-size: 1.2rem;
    }

    .bg-primary, .bg-success, .bg-info {
        border-radius: 0.5rem;
        padding: 1.5rem;
    }

    i.fa-3x {
        margin-bottom: 1rem;
    }
</style>
